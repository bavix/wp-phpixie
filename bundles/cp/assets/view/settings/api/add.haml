- $this->layout('cp:layout')

.col-lg-3
.col-lg-6
  .ibox
    .ibox-title
      %h3 New App
    .ibox-content
      %form(method="POST" action="/cp/settings/api/add" data-created)
        .form-group.form-group-lg
          %label.control-label(for="appName")
            Name
          %input#appName.form-control.text-uppercase(type="text" name="name" value="" )
        .hr-line-dashed
        .form-group(align="center")
          %button.btn.btn-primary.btn-lg
            %i.fa.fa-save
            Submit

- $assets::pushJs('/js/cp/settings/api/add.js')